.col-sm-6
  .main-login.main-center.company_profile
    = nested_form_for(@company_profile) do |f|
      - all_views_side_error_messages!(@company_profile)
      .form-group
        .cols-sm-10
          .input-group
            = f.text_field :company_name, autofocus: true,  :class => "form-control form-width", :placeholder => "Company Name"
            %br/
            %br/
            %br/
        %div{:id => "another_branch_address"}
          = f.fields_for :office_addresses do  |p|
            #fields
              .form-group
                .cols-sm-10
                  .input-group
                    = p.text_area :branch_address, autofocus: true,  :class => "form-control form-width", :placeholder => "Registered office Address"
              .select_state
                .form-group
                  .cols-sm-10
                    .input-group
                      = p.select(:state, options_for_select(State.collect_state),{},{class: "selectpicker form-width", "data-live-search": "true"})

              .form-group
                .cols-sm-10
                  .input-group
                    = p.text_field :telephone_no, autofocus: true,  :class => "form-control form-width", :placeholder => "Telephone No"
                    %br/
                    %br/
                    %div{:class => "another_branch_address"}
          = f.link_to_add "Add", :office_addresses, :data => { :target => ".another_branch_address" }
      .form-group
        .cols-sm-10
          .input-group
            = f.email_field :email, autofocus: true,  :class => "form-control form-width", :placeholder => "Email"
      .form-group
        .cols-sm-10
          .input-group
            = f.text_field :company_website, autofocus: true,  :class => "form-control form-width", :placeholder => "Company Website"
      .form-group.select_company
        .cols-sm-10
          .input-group
            = select_tag(:company_type, options_for_select(CompanyProfile::COMPANY), prompt: "Company Type", class: "selectpicker form-width add-class-company", "data-live-search": "true")
      .form-group
        .cols-sm-10
          .input-group
            = f.text_field :pan_no, autofocus: true,  :class => "form-control form-width", :placeholder => "Pan No"
      .form-group
        .cols-sm-10
          .input-group
            = f.text_field :corp_id_no, autofocus: true,  :class => "form-control form-width", :placeholder => "Corporate Identity Number"
            %br/
            %br/





        = render partial: 'company_profiles/append_conditional_dropdown_list', locals: {f: f, dropdown_list: CompanyProfile::POSITION, placeholder_value: "okokok"}

      .form-group
        = f.submit "Save", class: "btn btn-primary left-align"













