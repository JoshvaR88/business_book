= fields_for sales_configuration do |f|
  = f.fields_for :sales_tax do |t|
    %div{id: 'sales_tax'}
      = t.label :sales_tax,"Sales Tax"
      %br
      .form-inline
        = t.label :vat_type,"VAT Ttttttttttttttttttttttttttttttttttttttttttype"
        .form-group
          .cols-sm-6
            .input-group
              = t.select :vat_type, options_for_select(SalesConfiguration::VAT_TYPE),{}, {prompt: "Vat Type", class: "selectpicker form-width", "data-live-search": "true"}
      = t.label :tax_reg_no,"Tax Registration Number"
      .form-group
        .cols-sm-10
          .input-group
            = t.text_field :tax_reg_no, autofocus: true, :class => "form-control form-width"
      = t.label :tax_date,"Tax Date"
      .form-group
        .cols-sm-10
          .input-group
            = t.text_field :tax_date, autofocus: true, :class => "datepicker form-control form-width"

