.col-sm-6
  .main-login.main-center.company_profile
    = nested_form_for(@sales_configuration) do |f|
      - all_views_side_error_messages!(@sales_configuration)
      .form-group
        .cols-sm-10
          .input-group
            = f.text_field :tax_organization, autofocus: true,  :class => "form-control form-width", :placeholder => "Name"
            %br/
            %br/
            %br/
        = render partial: 'sales_configurations/sales_tax', locals: {sales_configuration: @sales_configuration}
        = render partial: 'sales_configurations/sales_tax_additional_info', locals: {sales_configuration: @sales_configuration}
        = render partial: 'sales_configurations/sales_tax_central', locals: {sales_configuration: @sales_configuration}
        = render partial: 'sales_configurations/service_tax', locals: {sales_configuration: @sales_configuration}
        = render partial: 'sales_configurations/service_tax_additional_info', locals: {sales_configuration: @sales_configuration}





      / .form-group
      /   .cols-sm-10
      /     .input-group
      /       = f.email_field :email, autofocus: true,  :class => "form-control form-width", :placeholder => "Email"

      / .form-group.select_company
      /   .cols-sm-10
      /     .input-group
      /       = f.select :company_type, options_for_select(CompanyProfile::COMPANY),{}, {prompt: "Company Type", class: "selectpicker form-width add-class-company", "data-live-search": "true"}

      .form-group
        = f.submit "Save", class: "btn btn-primary left-align"
