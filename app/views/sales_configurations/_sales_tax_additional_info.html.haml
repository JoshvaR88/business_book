= f.fields_for :sales_tax_additional_info do |s|
  %div{id: 'sales_tax_add_details'}
    .form-group
      .cols-sm-10
        .input-group
          = s.text_field :reg_circle, autofocus: true, :class => "form-control form-width", :placeholder => "Registered Circle"
    .form-group
      .cols-sm-10
        .input-group
          = s.text_field :division, autofocus: true, :class => "form-control form-width", :placeholder => "Division"
    .form-group
      .cols-sm-10
        .input-group
          = s.text_field :area_code, autofocus: true, :class => "form-control form-width", :placeholder => "Area Code"
    .form-group
      .cols-sm-10
        .input-group
          = s.text_field :authorized_person_name, autofocus: true, :class => "form-control form-width", :placeholder => "Authorized Person Name"
    .form-group
      .cols-sm-10
        .input-group
          = s.text_field :designation, autofocus: true, :class => "form-control form-width", :placeholder => "Designation"
    .sales-ie
      .form-group
        .cols-sm-10
          .input-group
            = s.text_field :ie_code, autofocus: true, :class => "form-control form-width", :placeholder => "Import/Export Code"
    %div{id: "remove_sales_tax_additional_info"}
      %div{id: "remove_sales_info"}
      = f.link_to_remove "remove"
%div{class: "append_sales_tax_additional_info"}
%div{id: 'add_sales_tax_additional_details'}
= f.link_to "Add","#", id: "show_sales_tax_add_info"
