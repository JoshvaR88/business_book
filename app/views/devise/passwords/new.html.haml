.col-sm-4
  %h2 Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    - devise_error_messages!
    .main-login.main-center
      .form-group
        .cols-sm-10
          .input-group
            %span.input-group-addon
              %i.fa.fa-envelope.fa{"aria-hidden" => "true"}
            = f.email_field :email, autofocus: true,  :class => "form-control",  :placeholder => "Email-ID"
      .form-group
        .actions
          = f.submit "Send me reset password instructions", class: "btn btn-primary"
        %br/
        = link_to "Log in", new_session_path(resource_name),class: "btn btn-primary"
        %br/
        %br/
        = "OR"
        %br/
        = link_to "Sign up", new_registration_path(resource_name),class: "btn btn-primary"
        %br/
.col-sm-4
.col-sm-4
