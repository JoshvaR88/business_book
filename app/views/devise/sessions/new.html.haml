%h2 Log in
.main-login.main-center
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      .cols-sm-10
        .input-group
          %span.input-group-addon
            %i.fa.fa-user.fa{"aria-hidden" => "true"}
          = f.email_field :email, autofocus: true,  :class => "form-control", :placeholder => "Email"
    .form-group
      .cols-sm-10
        .input-group
          %span.input-group-addon
            %i.fa.fa-lock.fa-lg{"aria-hidden" => "true"}
          = f.password_field :password, autofocus: true,  :class => "form-control", :placeholder => "Enter Password"
    - if devise_mapping.rememberable?
      .form-group
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      .submit-button
        = f.submit "Log in", :class => "btn btn-primary form-control"
        %p.center-align= "OR"
        = render "devise/shared/links"




