%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-horizontal
    = devise_error_messages!
    .form-group
      = f.text_field :first_name, autofocus: true,  :class => "col-sm-5", :placeholder => "First Name"
      %br/

    .form-group
      = f.text_field :last_name, autofocus: true,  :class => "col-sm-5", :placeholder => "Last Name"
      %br/
    .form-group
      = f.email_field :email, autofocus: true,  :class => "col-sm-5",  :placeholder => "Email-ID"
      %br/
    .form-group
      = f.text_field :user_id, autofocus: true,  :class => "col-sm-5", :placeholder => "User-ID"
      %br/

    .form-group
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", :class => "col-sm-5", :placeholder => "Password"
      %br/
    .form-group
      = f.password_field :password_confirmation, autocomplete: "off", :class => "col-sm-5", :placeholder => "Confirm Password"
      %br/

      - @user.build_profile

      = f.fields_for :profile do |p|

        %br/
        .form-group
          = p.text_field :company_name, autofocus: true,  :class => "col-sm-5", :placeholder => "Company Name"
          %br/

        / .form-group
        /   %form.form-horizontal{:role => "form"}
        /     %fieldset
        .form-group
          %select.col-sm-5
            %option{:disabled => "disabled", :selected => "selected", :value => ""} Company Type
            %option{:value => "1"} 1
            %option{:value => "2"} 2
            %option{:value => "3"} 3
          %br/

        .form-group
          %select.col-sm-5
            %option{:disabled => "disabled", :selected => "selected", :value => ""} Business
            %option{:value => "1"} 1
            %option{:value => "2"} 2
            %option{:value => "3"} 3
          %br/

        .form-group
          %select.col-sm-5
            %option{:disabled => "disabled", :selected => "selected", :value => ""} Country
            %option{:value => "1"} 1
            %option{:value => "2"} 2
            %option{:value => "3"} 3
          %br/
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
